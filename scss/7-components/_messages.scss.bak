.messages {
  max-width: $container;
  margin: 1rem auto;
  padding: 0.9rem;
  border: 0.1rem solid $offwhite;
  background-color: $beige;
  color: $black;

  &--warning {
    border-color: $yellow;
    background-color: rgba($yellow, 0.6);
  }

  &--error {
    border-color: $red;
    background-color: rgba($red, 0.6);
    color: $white;
  }

  &--status {
    border-color: $green;
    background-color: rgba($green, 0.6);
  }
}
