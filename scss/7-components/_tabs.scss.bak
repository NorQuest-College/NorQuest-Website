ul.tab-list {
  width: 100%;
  max-width: $container;
  margin: 1rem auto;
  padding: 0;
  border-bottom: 0.1rem solid $offwhite;

  li {
    display: inline-block;
    margin-bottom: 0;
  }

  a {
    display: block;
    padding: 0.5rem 1rem;
    border: 0.1rem solid $offwhite;
    border-bottom: 0;
    border-radius: 0.4rem 0.4rem 0 0;
  }
}
