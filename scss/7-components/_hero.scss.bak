.hero-wrapper {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100vh;

  &.hero-tall {
    min-height: 82rem;
    max-height: 82rem;

    @include breakpoint(medium) {
      min-height: 102.9rem;
      max-height: 102.9rem;
    }
  }

  &.hero-short {
    min-height: 52rem;
    max-height: 52rem;

    @include breakpoint(medium) {
      min-height: 66rem;
      max-height: 66rem;
    }
  }

  .container {
    position: relative;
    top: 70%;
    transform: translateY(-70%);
  }
}

.hero-image {
  position: absolute;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.hero-content {
  max-width: 89rem;
  padding-left: 3rem;
  border-left: 0.3rem solid $yellow;
  color: $white;

  h1 {
    color: $white;
    font-weight: 700;
  }

  p {
    font-size: 1.8rem;
    line-height: 1.5;

    @include breakpoint(medium) {
      font-size: 2.8rem;
    }
  }

  @include breakpoint(medium) {
    padding-left: 6rem;
  }
}

