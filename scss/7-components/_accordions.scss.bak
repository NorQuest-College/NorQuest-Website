.section_toggle__wrapper {
  position: relative;
  z-index: -1;
  overflow: hidden;
  height: 0;
  margin-bottom: $space_md;
  padding-left: $space_sm;
  border-bottom: 0.2rem solid $grey;
  border-left: 0.2rem solid $grey;
  transition: height 0.4s ease;

  &.open {
    z-index: auto;
    height: auto;
  }
}

.section_toggle__inner {
  padding-top: 1rem;
  padding-bottom: $space_md;

  p:last-child,
  > div p:last-child,
  ul:last-child,
  > div ul:last-child {
    margin-bottom: 0;
  }
}

.section_toggle {
  display: flex;
  width: 100%;
  margin-top: $space_sm;
  padding: 0.8rem 0 $space_xs $space_sm;
  border: none;
  border-left: 0.2rem solid $grey;
  border-radius: 0;
  background-color: transparent;
  font-weight: 400;
  font-size: 2.4rem;
  font-family: $primary_font;
  line-height: 1.2;
  text-align: left;
  cursor: pointer;

  &:hover,
  &:active,
  &:focus {
    background-color: transparent;
    color: $black;
  }

  span {
    flex-shrink: 1;
    margin-right: $space_sm;
    pointer-events: none;
  }

  .toggle_icon {
    position: relative;
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    margin-top: -0.2rem;
    margin-right: 0;
    margin-left: auto;
    border-radius: 50%;
    background-color: $grey;

    &::before,
    &::after {
      content: "";
      position: absolute;
      top: calc(50% - 0.1rem);
      left: calc(50% - 0.7rem);
      width: 1.4rem;
      height: 0.2rem;
      border-radius: 0.4rem;
      background-color: $offwhite;
    }

    &::after {
      transition: transform 0.2s ease;
      transform: rotate(-90deg);
    }
  }

  &.toggle-active span::after {
    transform: rotate(0);
  }
}
