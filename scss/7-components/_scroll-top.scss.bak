#scrollTop {
  position: fixed;
  right: $space_sm;
  bottom: $space_sm;
  z-index: 10;
  width: 6rem;
  min-height: 6rem;
  padding: 2.4rem 1rem 1rem;
  border: none;
  border-radius: 0.4rem;
  background-color: $offwhite;
  box-shadow: 0 0.2rem 0.2rem 0 $grey;
  font-size: 1.2rem;
  text-align: center;
  text-transform: uppercase;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;

  &::before {
    content: "";
    position: absolute;
    top: 1.4rem;
    left: calc(50% - 0.6rem);
    width: 0;
    height: 0;
    border-right: 0.6rem solid transparent;
    border-bottom: 0.6rem solid $grey;
    border-left: 0.6rem solid transparent;
    transition: border-bottom-color 0.3s ease;
  }

  &:hover,
  &:active,
  &:focus {
    color: $black;
    box-shadow: 0 0.4rem 0.2rem 0 $light_grey;
  }
}
