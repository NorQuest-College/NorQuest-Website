.ajax-progress-throbber,
.ajax-progress-fullscreen {
  @extend %transition;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  width: 100vw;
  height: 100vh;
  margin: 0;
  padding: 0;
  border-radius: 0;
  background: $grey url("./../images/ajax-loader.svg") center no-repeat;
  background-size: 12rem;
  opacity: 1;

  .throbber,
  .message {
    display: none;
  }
}
